	<profiles>
		<profile>
			<id>Windows</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<native.extension>dll</native.extension>
			</properties>
		</profile>
		<profile>
			<id>Linux</id>
			<activation>
				 <activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<native.extension>so</native.extension>
			</properties>
		</profile>
		<profile>
			<id>Mac</id>
			<properties>
				<native.extension>jnilib</native.extension>
			</properties>
		</profile>
