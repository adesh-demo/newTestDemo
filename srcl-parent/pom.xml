	<build>
		<plugins>
			<plugin>
				<groupId>org.mule.tools.maven</groupId>
				<artifactId>mule-maven-plugin</artifactId>
				<version>${mule.maven.plugin.version}</version>
				<extensions>true</extensions>
				<configuration>
					<sharedLibraries>
						<sharedLibrary>
							<groupId>com.sap.conn.idoc</groupId>
							<artifactId>com.sap.conn.idoc.sapidoc3</artifactId>
						</sharedLibrary>
						<sharedLibrary>
							<groupId>com.sap.conn.jco</groupId>
							<artifactId>com.sap.conn.jco.sapjco3</artifactId>
						</sharedLibrary>
						<sharedLibrary>
							<groupId>com.sap.conn.jco</groupId>
							<artifactId>libsapjco3</artifactId>
						</sharedLibrary>
					</sharedLibraries>
				<classifier>mule-application</classifier>
					<cloudHubDeployment>
							<artifact>target/${project.artifactId}-${project.version}-mule-application.jar</artifact>
							<uri>https://anypoint.mulesoft.com</uri>
							<muleVersion>${app.runtime}</muleVersion>
							<server>stericycle-anypoint</server>
							<applicationName>${cloudhub.appname}</applicationName>
							<environment>${cloudhub.environment}</environment>
							<businessGroup>${cloudhub.businessgroup}</businessGroup>
							<workers>${cloudhub.worker}</workers>
							<workerType>${cloudhub.workertype}</workerType>
							<deploymentTimeout>10000000</deploymentTimeout>
							<region>${cloudhub.region}</region>
							<skipDeploymentVerification>true</skipDeploymentVerification>
							<properties>
								<anypoint.platform.analytics_base_uri>https://analytics-ingest.anypoint.mulesoft.com</anypoint.platform.analytics_base_uri>
								<api.id>${cloudhub.env.autodiscovery}</api.id>
								<anypoint.platform.config.analytics.agent.enabled>true</anypoint.platform.config.analytics.agent.enabled>
								<anypoint.platform.client_id>${cloudhub.env.clientid}</anypoint.platform.client_id>
								<anypoint.platform.client_secret>${cloudhub.env.clientsecret}</anypoint.platform.client_secret>
								<anypoint.platform.base_uri>https://anypoint.mulesoft.com</anypoint.platform.base_uri>
								<env>${env}</env>
								<key>${key}</key>
								<org.mule.runtime.core.privileged.event.BaseEventContext.maxDepth>${event.maxdepth}</org.mule.runtime.core.privileged.event.BaseEventContext.maxDepth>
							</properties>
					</cloudHubDeployment>	
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.mulesoft.munit.tools</groupId>
				<artifactId>munit-maven-plugin</artifactId>
				<version>${munit.version}</version>
				<executions>
					<execution>
						<id>test</id>
						<phase>test</phase>
						<goals>
							<goal>test</goal>
							<goal>coverage-report</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
				<runtimeVersion>${munit.runtime.version}</runtimeVersion>
					<coverage>
						<runCoverage>true</runCoverage>

						<failBuild>${munit.failbuild}</failBuild>
						<requiredApplicationCoverage>${munit.application.coverage}</requiredApplicationCoverage>
						<requiredResourceCoverage>${munit.resource.coverage}</requiredResourceCoverage>
						<requiredFlowCoverage>${munit.flow.coverage}</requiredFlowCoverage>
						<ignoreFlows>${munit.flow.ignore}</ignoreFlows>
						<ignoreFiles>
   							 <ignoreFile>common-flows.xml</ignoreFile>
							 <ignoreFile>common-logging.xml</ignoreFile>
   							 
  						</ignoreFiles>
						
						<formats>
							<format>html</format>
							<format>console</format>
						</formats>
					</coverage>

					<dynamicPorts>
						<dynamicPort>http.port</dynamicPort>
						<dynamicPort>http.private.port</dynamicPort>
					</dynamicPorts>

					<systemPropertyVariables>
						<env>${mule.env.value}</env>
					</systemPropertyVariables>

					<classpathDependencyScopeExclude>${munit.classpath.dependency.scope.exclude}</classpathDependencyScopeExclude>
					<classpathDependencyExcludes>${munit.classpath.dependency.exclude}</classpathDependencyExcludes>

				</configuration>
			</plugin>
		</plugins>
	</build>

